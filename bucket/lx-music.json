        }
    },
    "shortcuts": [
        [
            "lx-music-desktop.exe",
            "lx-music"
        ]
    ],
    "post_install": [
        "$lx_music_root = \"$dir\".Replace('\\', '\\\\')",
        "'scoop_persist.ps1' | ForEach-Object {",
        "    $content = Get-Content \"$bucketsdir\\abgo_bucket\\scripts\\lx-music\\$_\"",
        "    $content = $content.Replace('$lx_music_root', $lx_music_root)",
        "    if ($global) {",
        "       $content = $content.Replace('HKEY_CURRENT_USER', 'HKEY_LOCAL_MACHINE')",
        "    }",
        "    Set-Content \"$dir\\$_\" $content -Encoding Ascii",
        "}"
    ],
    "checkver": "github",
