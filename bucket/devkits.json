{
    "version": "2023-08-14",
    "description": "新一代开发者工具箱",
    "homepage": "https://devkits.dev/",
    "license": "Copyright © 2023 Devkits All rights reserved.",
    "changelog": "https://devkits.dev/changelog",
    "architecture": {
        "64bit": {
            "url": "https://update.devkits.dev/binaries/devkits-windows.zip",
            "hash": "ca851d91a9c5e736f77f6236ab2f50a7eddc92020198ccc3a5be81b661600b02"
        }
    },
    "pre_install": [
        "Get-ChildItem \"$dir\\devkits.exe\" | Rename-Item -NewName 'setup.exe'",
        "Expand-7zipArchive \"$dir\\setup.exe\" \"$dir\"",
        "Remove-Item \"$dir\\`$PLUGINSDIR\", \"$dir\\uninst*\", \"$dir\\setup.exe\" -Force -Recurse"
    ],
    "installer": {
        "script": [
            "ensure \"$persist_dir\" | Out-Null",
            "New-Item \"$env:APPDATA\\devkits.exe\" -ItemType Junction -Target \"$persist_dir\" | Out-Null"
        ]
    },
    "uninstaller": {
        "script": "Remove-Item \"$env:APPDATA\\devkits.exe\" -Recurse -Force -ErrorAction 'SilentlyContinue'"
    },
    "shortcuts": [
        [
            "devkits.exe",
            "devkits"
        ]
    ],
    "checkver": {
        "url": "https://devkits.dev/changelog",
        "regex": "(?s)>(version[\\d.]+) - (\\d+)-(\\d+)-(\\d+)<",
        "replace": "${version}"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://update.devkits.dev/binaries/devkits-windows.zip"
            }
        }
    }
}
