    "post_install": [
        "echo \"\"",
        "echo \"It's going to persist data ,and you need to run lx-music to generate the directory(lx-music-desktop\\LxDatas) under $env:APPData to create a link to realize persist\"",
        "pause",
        "$origin_path=\"$env:APPData\\lx-music-desktop\\LxDatas\"",
        "$persist_path=\"$persist_dir\\LxDatas\"",
        "do {",
        "    if (-not (Test-Path $origin_path)) {",
        "       echo \"\"",
        "       Write-Host \"The lx-music-desktop\\LxDatas was not found under $env:APPData , please run lx-music to generate the directory(lx-music-desktop\\LxDatas) under $env:APPData\"",
        "       pause",
        "    }",
        "} while (-not (Test-Path $origin_path))",
        "Write-Host \"The directory(lx-music-desktop\\LxDatas) was found now,and continue persist by a file link \"",
        "    if (-not (Test-Path $persist_dir)) {",
        "       mkdir $persist_dir",
        "    }",
        "    if(Test-Path $persist_path){",
        "       Remove-Item -Force  $origin_path",
        "    }else{",
        "       Move-Item $origin_path $persist_path",
        "    }",
        "sudo New-Item -ItemType SymbolicLink $origin_path -Target  $persist_path"
    ],
