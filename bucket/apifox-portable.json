  "shortcuts": [
    [
      "Apifox.exe",
      "Apifox"
    ]
  ],
  "uninstaller": {
    "script": [
      "info '[Portable Mode]: Backing up user data...'",
      "if (Test-Path \"$env:AppData\\apifox\\*\") {",
      "    Copy-Item \"$env:AppData\\apifox\\*\" \"$persist_dir\\User Data\\\" -Recurse -Force | Out-Null",
      "}"
    ]
  },
  "version": "2.2.31"
