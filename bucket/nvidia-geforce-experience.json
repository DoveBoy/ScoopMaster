{
    "version": "3.27.0.120",
    "description": "NVIDIA GeForce Experience Auto Update Drivers and Optimize Game Settings",
    "homepage": "https://www.nvidia.com/en-us/geforce/geforce-experience",
    "license": "Unknown",
    "url": "https://us.download.nvidia.com/GFE/GFEClient/3.27.0.120/GeForce_Experience_v3.27.0.120.exe#/installer.zip",
    "installer": {
        "file": "setup.exe",
        "args": [
            "/s",
            "/noreboot"
        ]
    },
    "post_install": "Remove-Item \"$dir\\*\" -Recurse -Force | Out-Null",
    "uninstaller": {
        "script": [
            "$target = \"$env:ProgramFiles\\NVIDIA Corporation\\Installer2\\InstallerCore\\NVI2.DLL\"",
            "Start-Process -Wait rundll32.exe -ArgumentList \"`\"$target`\",UninstallPackage Display.GFExperience -silent\""
        ]
    },
    "checkver": {
        "regex": "_v([\\d.]+).exe"
    },
    "autoupdate": {
        "url": "https://us.download.nvidia.com/GFE/GFEClient/$version/GeForce_Experience_v$version.exe#/installer.zip"
    }
}
