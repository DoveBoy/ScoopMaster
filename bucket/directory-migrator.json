{
    "version": "1.0",
    "description": "A practical tool for conveniently and quickly migrating data files.",
    "homepage": "https://github.com/ArcticYouko/DirectoryMigrator",
    "license": "GPL-3.0",
    "notes": "Add DirectoryMigrator as a context menu option by running: \"$dir\\install-context.reg\"",
    "url": "https://github.com/ArcticYouko/DirectoryMigrator/releases/download/v1.0/DirectoryMigrator.exe",
    "hash": "sha1:b30970485f51501265025c8fe9237ad987dbd42a",
    "bin": "DirectoryMigrator.exe",
    "checkver": "github",
    "autoupdate": {
        "url": "https://github.com/ArcticYouko/DirectoryMigrator/releases/download/v$version/DirectoryMigrator.exe"
    },
    "post_install": [
        "$reg_file_content = @'",
        "Windows Registry Editor Version 5.00",
        "",
        "[HKEY_CLASSES_ROOT\\.mil]",
        "@=\"DirectoryMigrator.mil\"",
        "",
        "[HKEY_CLASSES_ROOT\\DirectoryMigrator.mil]",
        "@=\"Migration Item List\"",
        "",
        "[HKEY_CLASSES_ROOT\\DirectoryMigrator.mil\\DefaultIcon]",
        "@=\"$base\\\\DirectoryMigrator.exe\"",
        "",
        "[HKEY_CLASSES_ROOT\\DirectoryMigrator.mil\\Shell\\Open\\Command]",
        "@=\"\\\"$base\\\\DirectoryMigrator.exe\\\" \\\"%L\\\"\"",
        "",
        "[HKEY_CLASSES_ROOT\\DirectoryMigrator.mil\\Shell\\RunAs\\Command]",
        "@=\"\\\"$base\\\\DirectoryMigrator.exe\\\" \\\"%L\\\"\"",
        "'@ -replace \"`r?`n\", \"`r`n\"",
        "Set-Content -Path \"$dir\\install-context.reg\" -Value $reg_file_content.Replace('$base', $dir.Replace('\\', '\\\\')) -Encoding Ascii"
    ]
}
